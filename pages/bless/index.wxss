/* pages/bless/index.wxss */
page { 
    padding-bottom: 250rpx;
}
.title {
    text-align: center;
    font-size: 36rpx;
    line-height: 60rpx;
    margin-bottom: 10rpx;
    color: #666;
    margin-top: 20rpx;
}

.friends {
    min-height: 0;
    overflow: hidden;
    width: 700rpx;
    margin: 0 auto;
    margin-top: 20rpx;
    background-color: #fff;
    border-radius: 10rpx;
    box-shadow: 0 0 25rpx rgba(0, 0, 0, 0.05);
    margin-bottom: 20rpx;
}

.face {
    width: 120rpx;
    height: 160rpx;
    float: left;
    margin: 20rpx 10rpx;
    text-align: center;
}
.face .avator {
    width: 110rpx;
    height: 110rpx;
    border-radius: 50%;
    overflow: hidden;
}


.face text {
    height: 30rpx;
    line-height: 30rpx;
    font-size: 24rpx;
    color: #666;
    width: 120rpx;
    margin: 0 auto;
    display: inline-block;
    white-space:nowrap; overflow:hidden; text-overflow:ellipsis;
}
.face image {
    width: 110rpx;
    height: 110rpx;
    display: block;
    margin: 0 auto;
    overflow: hidden;
    margin-bottom: 5rpx;
    border-radius: 50%;
}

.btn_zone {
    padding: 25rpx;
    border-top: 1px solid #f1f1f1;
    border-bottom: 1px solid #f1f1f1;
    min-height: 0;
    overflow: hidden;
}

.zan {
    width: 340rpx;
}

.share {
    width: 340rpx;
}
.bless_bar {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 750rpx;
    min-height: 0;
    overflow: hidden;
    background-color: rgba(255,255,255,.9);
}
.bless_img {
    width: 300rpx;
    height: 225rpx;
    margin: 0 auto;
}

.bless_img image {
    width: 300rpx;
    height: 225rpx;
}

.tips {
    text-align: center;
    font-size: 25rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    color: #ccc;
}
.btn_zone button {
    border: none;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 36rpx;
    background-color: none
}

.zhufu_btn {
    background: #f2709c;  /* fallback for old browsers */
    background: -webkit-linear-gradient(to right, #ff9472, #f2709c);  /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to right, #ff9472, #f2709c); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

    box-shadow: 8rpx 12rpx 17rpx -6rpx  rgba(228, 69, 106, 0.5);
    outline: none;
    border: none;
    color: #fff;
}

.share_btn {
    background: #f2709c;  /* fallback for old browsers */
    background: -webkit-linear-gradient(to left, #ff9472, #f2709c);  /* Chrome 10-25, Safari 5.1-6 */
    background: linear-gradient(to left, #ff9472, #f2709c); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
    box-shadow: 8rpx 12rpx 17rpx -6rpx  rgba(228, 69, 106, 0.5);
    outline: none;
    border: none;
    color: #fff!important;
}
action-sheet-item,action-sheet-cancel {
    height: 60rpx;
    line-height: 60rpx;
    font-size: 36rpx;
}

.share-btn {
    border: none;
    border-radius: 0;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 36rpx;
    background-color: #fff;
}
.share-btn:after {
    border: none;
    border-radius: 0;
}
